{
  "name": "Medium Enhanced Stats",
  "version": "1.3",
  "description": "Enhancements for your Medium stats page! Get insight into total view count with new table summary row...",
  "manifest_version": 2,
  "author": "Tomas Trajan <@tomastrajan>",
  "permissions": [
    "activeTab", "declarativeContent"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.medium.com/*/stats*"],
      "run_at": "document_idle",
      "css": ["src/stats/stats-total.css"],
      "js": ["src/stats/stats-total.js"]
    }
  ],
  "icons": {
    "128": "src/images/icon-128.png"
  },
  "browser_action": {
    "default_title": "Medium Enhanced Stats",
    "default_popup": "src/popup/popup.html"
  }
}