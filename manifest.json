{
  "name": "Medium Enhanced Stats",
  "version": "2.4.1",
  "description": "Get overview about your total Medium stats for articles and responses!",
  "manifest_version": 2,
  "author": "Tomas Trajan <@tomastrajan>",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://medium.com/",
    "https://cdn-images-1.medium.com/"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.medium.com/*",
        "https://medium.com/*"
      ],
      "run_at": "document_idle",
      "css": ["src/stats/stats-total.css"],
      "js": [
        "src/libs/rxjs.js",
        "src/stats/stats-total.js"
      ]
    }
  ],
  "icons": {
    "128": "src/images/icon-128.png"
  },
  "browser_action": {
    "default_title": "Medium Enhanced Stats",
    "default_popup": "src/popup/popup.html"
  }
}